# Database Configuration
POSTGRES_DB=appflowy
POSTGRES_USER=appflowy
POSTGRES_PASSWORD=appflowy_password_change_this

# AppFlowy Server Configuration
APPFLOWY_SERVER_URL=http://localhost:6633
APPFLOWY_WS_URL=ws://localhost:6633/ws

# JWT Authentication Secret (CHANGE THIS IN PRODUCTION!)
# Generate a secure random string: openssl rand -base64 32
JWT_SECRET=your-secret-key-change-this-in-production

# Logging
RUST_LOG=info

# Storage Configuration
# Files will be stored in ./storage directory on host
STORAGE_PATH=/app/storage
